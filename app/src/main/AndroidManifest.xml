<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mercuryo">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_mercuryo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_mercuryo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppMercuryo">

        <meta-data android:name="com.google.android.geo.API_KEY"
            android:value="@string/map_key"/>

        <activity
            android:name="com.example.mercuryo.UpdateCliActivity"
            android:exported="false" />
        <activity
            android:name="com.example.mercuryo.Servico"
            android:exported="false" />
        <activity
            android:name="com.example.mercuryo.InsCliente"
            android:exported="false" />
        <activity
            android:name="com.example.mercuryo.Clientes"
            android:exported="true"></activity>
        <activity
            android:name="com.example.mercuryo.Info"
            android:exported="true"></activity>
        <activity
            android:name="com.example.mercuryo.UserActivity"
            android:exported="false" />
        <activity
            android:name="com.example.mercuryo.DsServico"
            android:exported="false" />
        <activity
            android:name="com.example.mercuryo.controlador.LoginActivity"
            android:label="Tela de Login" />
        <activity android:name="com.example.mercuryo.controlador.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.mercuryo.CadastraFunc" />
        <activity android:name="com.example.mercuryo.EsqueciSenha" />
    </application>

</manifest>